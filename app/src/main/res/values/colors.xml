<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#1E293B</color>
    <color name="white">#FFFFFF</color>
    <color name="blue">#525BFF</color>
    <color name="grey">#EDEDED</color>
    <color name="greyDark">#828282</color>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
    </style>

    <style name="MyTextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="hintTextColor">@color/greyDark</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:paddingTop">16dp</item>
    </style>
    <color name="red">#C81616</color>
</resources>